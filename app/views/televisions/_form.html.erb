<%= form_with(model: television, local: true) do |form| %>
  <% if television.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(television.errors.count, "error") %> prohibited this television from being saved:</h2>

      <ul>
      <% television.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :brand %>
    <%= form.text_field :brand, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :display %>
    <%= form.text_field :display, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :size %>
    <%= form.number_field :size, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :year %>
    <%= form.number_field :year, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if television.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', television, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if television.persisted? %>
      <%= link_to "Cancel", television, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", televisions_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
